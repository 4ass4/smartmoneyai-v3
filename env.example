# SmartMoneyAI v3 - Пример конфигурации
# Скопируйте этот файл в .env и заполните своими данными

# ============================================
# TELEGRAM BOT
# ============================================
# Получите токен у @BotFather в Telegram
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# ID администратора (можно получить у @userinfobot)
TELEGRAM_ADMIN_ID=your_telegram_admin_id_here

# ID чата для отправки сигналов (если отличается от ADMIN_ID)
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# ============================================
# BINGX API
# ============================================
# Используем BingX, не Bybit!
EXCHANGE=BINGX

# API ключи от BingX (для доступа к стакану и потоку сделок)
# Получите на: https://bingx.com/en-us/api
BINGX_API_KEY=your_bingx_api_key_here
BINGX_API_SECRET=your_bingx_secret_key_here

# ============================================
# AI НАСТРОЙКИ (Claude Haiku через прокси API)
# ============================================
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
AI_MODELS=meituan/longcat-flash-chat:free

# ============================================
# DATABASE
# ============================================
DATABASE_URL=sqlite:///smart_money_bot.db

# ============================================
# ТОРГОВЫЕ НАСТРОЙКИ
# ============================================
DEFAULT_SYMBOLS=BTCUSDT
UPDATE_INTERVAL=180

# Таймфреймы (ЛИМИТЫ ДЛЯ BINGX = 100 MAX!)
KLINE_INTERVAL_YEARLY=1D
KLINE_LIMIT_YEARLY=100

KLINE_INTERVAL_LONG=4h
KLINE_LIMIT_LONG=100

KLINE_INTERVAL=15m
KLINE_LIMIT=100

MIN_VOLUME_THRESHOLD=1000000
MIN_LIQUIDITY_ZONE_SIZE=50000

# ============================================
# ФИЛЬТРЫ СИГНАЛОВ
# ============================================
ENABLE_EMA_FILTER=True
ENABLE_MACD_FILTER=True
ENABLE_RSI_FILTER=True
ENABLE_VOLUME_FILTER=True

# ============================================
# TRADINGVIEW WEBHOOK
# ============================================
ENABLE_TRADINGVIEW_WEBHOOK=False

# ============================================
# ЕЖЕДНЕВНЫЙ ОТЧЕТ
# ============================================
ENABLE_DAILY_REPORT=True
DAILY_REPORT_HOUR=5
DAILY_REPORT_MINUTE=0
